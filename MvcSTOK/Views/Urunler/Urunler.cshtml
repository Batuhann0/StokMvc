@using MvcSTOK.Models.Entity;
@model List<Tbl_URUNLER>

@{
    ViewBag.Title = "Urunler";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table id="tbl1" class=" table table-bordered">
    <thead>
        <tr>
            <th>URUN ID</th>
            <th>URUN AD</th>
            <th>MARKA</th>
            <th>URUN KATEGORİ</th>
            <th>FİYAT</th>
            <th>STOK</th>
            <th>SİL/GÜNCELLE</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var urun in Model)
        {
            <tr>
                <th>@urun.URUNID</th>
                <td>@urun.URUNAD</td>
                <td>@urun.MARKA</td>
                <td>@urun.Tbl_KATEGORILER.KATEGORIAD</td>
                <td>@urun.FIYAT</td>
                <td>@urun.STOK</td>
                <td>
                    <a href="/Urunler/SIL/@urun.URUNID" class="btn btn-danger">SİL</a>
                    <a href="/Urunler/UrunGetir/@urun.URUNID" class="btn btn-success">Güncelle</a>
                </td>
            </tr>

        }

    </tbody>

</table>
<a href="/Urunler/YeniUrun/" class="btn btn-primary">YENİ ÜRÜN EKLE</a>
<script type="text/javascript" src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>

<link href="~/Content/DataTables/css/dataTables.bootstrap4.css" rel="stylesheet" />

<script>
    $('#tbl1').dataTable();
</script>