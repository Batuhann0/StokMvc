@using MvcSTOK.Models.Entity;
@model List<Tbl_MUSTERILER>
@{
    ViewBag.Title = "Musteri";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("Musteri", "Musteriler", FormMethod.Post))
{
    <h4>
        Aranacak Müşteri Adı: @Html.TextBox("p")
        <input type="submit" value="Ara"/>
    </h4>
}

<table class="table table-bordered">
    <tr>

        <th>MUSTERI ID</th>
        <th>MUSTERI AD</th>
        <th>MUSTERI SOYAD</th>
        <th>SİL/GÜNCELLE</th>
        <th>SİL(ALERT)</th>
    </tr>

    <tbody>
        @foreach (var musteri in Model)
        {
            <tr>
                <th>@musteri.MUSTERIID</th>
                <td>@musteri.MUSTERIAD</td>
                <td>@musteri.MUSTERISOYAD</td>
                <td>
                    <a href="/Musteriler/SIL/@musteri.MUSTERIID" class="btn btn-danger">SİL</a>
                    <a href="/Musteriler/MusteriGetir/@musteri.MUSTERIID" class="btn btn-success">Güncelle</a>
                </td>

                @*ALERT İLE SİLME*@
                <td>@Html.ActionLink("Sil Butonu", "SIL", new { id = musteri.MUSTERIID }, new { @class = "btn btn-warning", onclick = "return confirm('Eminmisiniz Silmek için?')" })</td>
            </tr>
        }
    </tbody>
</table>
<a href="/Musteriler/YeniMusteri/" class="btn btn-primary">YENİ MÜŞTERİ EKLE</a>
